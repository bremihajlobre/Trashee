@model Trashee.Pages.AkcijaModel
@{
    Trashee.Models.Akcija akcija = (Trashee.Models.Akcija)ViewData["Akcija"];
}

<link rel="stylesheet" href="~/css/akcijaView/Akcije/Zavrsena.css" />

<div class="statistic">
    <h4><label>Sakupljeno smeca</label><input style="width: 50px;text-align: center; border: none; background: none;" disabled /> <label>kg</label></h4>
</div>
<div class="table" id="tabelaUspesna">
    <table class="thead-dark">
        <thead>
            <tr>
                <th>
                    Ime
                </th>
                <th>
                    Prezime
                </th>
                <th>
                    Datum odrzavanja akcije
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Trashee.Models.Ucestvuje ucestvuje in akcija.Ucestvuje)
            {
                <tr>
                    <td>
                        @ucestvuje.Skaut.Ime
                    </td>
                    <td>
                        @ucestvuje.Skaut.Prezime
                    </td>
                    <td>
                        @ucestvuje.Akcija.OrgNaLok.DatumOrganizovanja
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="prePosle">
    <div class="pre">
        <h5>Slika pre</h5>
        <div class="slikaPre">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @{ int i = 0;}
                    @foreach (Trashee.Models.SlikeLokacija slikaLokacija in akcija.OrgNaLok.Lokacija.SlikeLokacija)
                    {
                        if (i == 0)
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
                        }
                        else
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                        }
                        i++;
                    }
                </ol>
                <div class="carousel-inner">
                    @{i = 0;}
                        @foreach (Trashee.Models.SlikeLokacija slikaLokacija in akcija.OrgNaLok.Lokacija.SlikeLokacija)
                        {
                            @if (i == 0)
                            {
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="~/images/@slikaLokacija.Slika" alt="Image">
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="~/images/@slikaLokacija.Slika" alt="Image">
                                </div>
                            }
                            i++;
                        }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <div class="posle">
        <h5>Slika posle</h5>
        <div class="slikaPosle">
            <div id="carouselExampleIndicatorsAkcija" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @{i = 0;}
                    @foreach (Trashee.Models.SlikeAkcija slikaAkcija in akcija.SlikeAkcija)
                    {
                        if (i == 0)
                        {
                            <li data-target="#carouselExampleIndicatorsAkcija" data-slide-to="@i" class="active"></li>
                        }
                        else
                        {
                            <li data-target="#carouselExampleIndicatorsAkcija" data-slide-to="@i"></li>
                        }
                        i++;
                    }
                </ol>
                <div class="carousel-inner">
                    @{i = 0;}
                    @foreach (Trashee.Models.SlikeAkcija slikaAkcija in akcija.SlikeAkcija)
                    {
                        @if (i == 0)
                        {
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="~/images/@slikaAkcija.Slika" alt="Image">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" src="~/images/@slikaAkcija.Slika" alt="Image">
                            </div>
                        }
                        i++;
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicatorsAkcija" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicatorsAkcija" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>