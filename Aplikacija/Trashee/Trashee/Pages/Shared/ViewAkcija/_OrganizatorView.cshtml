@model AkcijaModel
@{
}

<link rel="stylesheet" href="~/css/akcijaView/OrganizatorView.css" />

<div class="akcija">
    <div class="levaStrana">
        <h4>Izaberite akcije</h4>
        <form method="get">
            <div class="formFilters">
                @switch (Model.SelectedFilter)
                {
                    case AkcijaModel.FilterOptions.Sve:
                        {
                            <div class="btn-group btn-group-toggle">
                                <label class="btn btn-secondary active">
                                    <input type="radio" name="filter" id="filterTable" value="Sve" onclick="this.form.submit()" checked />Sve
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Uspesna" onclick="this.form.submit()" />Uspesna
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Predstojeca" onclick="this.form.submit()" />Predstojeca
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Otkazana" onclick="this.form.submit()" />Otkazana
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Cekanje" onclick="this.form.submit()" />Cekanje
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Lokacije" onclick="this.form.submit()" />Lokacije
                                </label>
                            </div>
                            break;
                        }
                    case AkcijaModel.FilterOptions.Uspesna:
                        {
                            <div class="btn-group btn-group-toggle">
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Sve" onclick="this.form.submit()" />Sve
                                </label>
                                <label class="btn btn-secondary active">
                                    <input type="radio" name="filter" id="filterTable" value="Uspesna" onclick="this.form.submit()" checked />Uspesna
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Predstojeca" onclick="this.form.submit()" />Predstojeca
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Otkazana" onclick="this.form.submit()" />Otkazana
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Cekanje" onclick="this.form.submit()" />Cekanje
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Lokacije" onclick="this.form.submit()" />Lokacije
                                </label>
                            </div>
                            break;
                        }
                    case AkcijaModel.FilterOptions.Predstojeca:
                        {
                            <div class="btn-group btn-group-toggle">
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Sve" onclick="this.form.submit()" />Sve
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Uspesna" onclick="this.form.submit()" />Uspesna
                                </label>
                                <label class="btn btn-secondary active">
                                    <input type="radio" name="filter" id="filterTable" value="Predstojeca" onclick="this.form.submit()" checked />Predstojeca
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Otkazana" onclick="this.form.submit()" />Otkazana
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Cekanje" onclick="this.form.submit()" />Cekanje
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Lokacije" onclick="this.form.submit()" />Lokacije
                                </label>
                            </div>
                            break;
                        }
                    case AkcijaModel.FilterOptions.Otkazana:
                        {
                            <div class="btn-group btn-group-toggle">
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Sve" onclick="this.form.submit()" />Sve
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Uspesna" onclick="this.form.submit()" />Uspesna
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Predstojeca" onclick="this.form.submit()" />Predstojeca
                                </label>
                                <label class="btn btn-secondary active">
                                    <input type="radio" name="filter" id="filterTable" value="Otkazana" onclick="this.form.submit()" checked />Otkazana
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Cekanje" onclick="this.form.submit()" />Cekanje
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Lokacije" onclick="this.form.submit()" />Lokacije
                                </label>
                            </div>
                            break;
                        }
                    case AkcijaModel.FilterOptions.Cekanje:
                        {
                            <div class="btn-group btn-group-toggle">
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Sve" onclick="this.form.submit()" />Sve
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Uspesna" onclick="this.form.submit()" />Uspesna
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Predstojeca" onclick="this.form.submit()" />Predstojeca
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Otkazana" onclick="this.form.submit()" />Otkazana
                                </label>
                                <label class="btn btn-secondary active">
                                    <input type="radio" name="filter" id="filterTable" value="Cekanje" onclick="this.form.submit()" checked />Cekanje
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Lokacije" onclick="this.form.submit()" />Lokacije
                                </label>
                            </div>
                            break;
                        }
                    case AkcijaModel.FilterOptions.Lokacije:
                        {
                            <div class="btn-group btn-group-toggle">
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Sve" onclick="this.form.submit()" />Sve
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Uspesna" onclick="this.form.submit()" />Uspesna
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Predstojeca" onclick="this.form.submit()" />Predstojeca
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Otkazana" onclick="this.form.submit()" />Otkazana
                                </label>
                                <label class="btn btn-secondary">
                                    <input type="radio" name="filter" id="filterTable" value="Otkazana" onclick="this.form.submit()" />Cekanje
                                </label>
                                <label class="btn btn-secondary active">
                                    <input type="radio" name="filter" id="filterTable" value="Lokacije" onclick="this.form.submit()" />Lokacije
                                </label>
                            </div>
                            break;
                        }
                }
            </div>
        </form>
        <div class="table">
            <table class="thead-dark">
                <thead>
                    <tr>
                        <th>
                            Ime i prezime
                        </th>
                        <th>
                            Datum
                        </th>
                        <th>
                            Tip
                        </th>
                        <th>
                        </th>

                    </tr>
                </thead>

                <tbody>
                    @if (Model.Akcije != null)
                    {
                        @if (Model.Akcije.Count > 0)
                        {
                            @foreach (Trashee.Models.Akcija akcija in Model.Akcije)
                            {
                                <tr>
                                    <td>
                                        @akcija.OrgNaLok.Organizator.Ime @akcija.OrgNaLok.Organizator.Prezime
                                    </td>
                                    <td>
                                        @akcija.OrgNaLok.DatumOrganizovanja
                                    </td>
                                    <td>
                                        @akcija.Status
                                    </td>
                                    <td style="display: flex; flex-direction: row;">
                                        <form method="post">
                                            <input type="hidden" value="@akcija.AkcijaID" />
                                            <button type="button" style="margin-right: 10px;" value="Vidi akciju" class="vidiLevuStranu btn btn-secondary" data-target="AkcijeView/Details"><i class="fas fa-eye fa-2x"></i></button>
                                        </form>
                                        @if (akcija.Status == AkcijaModel.FilterOptions.Predstojeca.ToString())
                                        {
                                            <form method="post">
                                                @*<input type="hidden" value="@akcija.AkcijaID"/>*@
                                                <button type="submit" value="Otkazi akciju" class="vidiLevuStranu btn btn-secondary" asp-route-id="@akcija.AkcijaID" asp-page-handler="OtkaziAkciju"><i class="fas fa-calendar-times fa-2x"></i></button>
                                            </form>
                                        }
                                    </td>

                                </tr>
                            }
                        }
                    }
                    @if (Model.Lokacije != null)
                    {
                        @if (Model.Lokacije.Count() > 0)
                        {
                            @foreach (Trashee.Models.Lokacija lokacija in Model.Lokacije)
                            {
                                <tr>
                                    <td>
                                        @lokacija.Skaut.Ime @lokacija.Skaut.Prezime
                                    </td>
                                    <td>
                                        @lokacija.DatumPrijavljivanja
                                    </td>
                                    <td>
                                        Lokacija
                                    </td>
                                    <td>
                                        <form method="post">
                                            <input type="hidden" value="@lokacija.LokacijaID" />
                                            <button type="button" value="Vidi" class="vidiLevuStranu btn btn-secondary" data-target="AkcijeView/DetailsLokacija"><i class="fas fa-eye fa-2x"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="desnaStrana">
        <div id="details"></div>
    </div>
</div>